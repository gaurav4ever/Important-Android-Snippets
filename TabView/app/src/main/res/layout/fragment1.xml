<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C4A148C">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/userLayout">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/img"
                    android:src="@drawable/avatar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_toRightOf="@+id/img"
                    android:textColor="#000"
                    android:id="@+id/username"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username@gmail.com"
                    android:layout_toRightOf="@+id/img"
                    android:layout_below="@+id/username"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:contentPaddingTop="20dp"
                card_view:contentPaddingBottom="20dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/info1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/layer1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l1">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/notes1"
                                    android:id="@+id/icon1"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon1"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="My Notes"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l2">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/diary"
                                    android:id="@+id/icon2"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon2"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="Daily Diary"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l3">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/buket"
                                    android:padding="0.5dp"
                                    android:id="@+id/icon3"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon3"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="Buket List"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l4">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/slam"
                                    android:id="@+id/icon4"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon4"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="Slam Book"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>