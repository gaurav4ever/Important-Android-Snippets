<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gauravsharma.tabview.edit_note"
    tools:showIn="@layout/activity_edit_note">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Title"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:lines="1"
        android:textSize="16sp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:ems="10"
        android:textStyle="bold"
        android:background="#efefef"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentTop="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:hint="Note"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:lines="25"
        android:textSize="16sp"
        android:gravity="top|left"
        android:layout_marginTop="2dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="#efefef"
        android:id="@+id/body"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/optionsLayout"
        android:background="#efefef"
        android:id="@+id/updateAtLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/updateAtText"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#7B1FA2"
        android:id="@+id/optionsLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll1"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/save">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/save"
                    android:id="@+id/saveImg"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/saveImg"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/audio">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/microphone"
                    android:id="@+id/audio_img"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/audio_img"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/delete">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/delete"
                    android:id="@+id/delete_img"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/delete_img"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
